<%- include('../includes/header.ejs') %>

<script src="https://kit.fontawesome.com/3b161c540c.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/css/navbar.css">
</head>
<body>
    <%- include('../includes/navbar.ejs') %>
    <main>
        <% if(application.length <= 0){ %>
            <h1 class="text-center mt-4"> Nothing there! </h1>
        <% }  else { %>
        <div class="d-flex flex-column justify-content-center align-items-center gap-3">
 
            <div class="col-sm-4 w-50 ">
                <% application.forEach(ap => { %>
                <div class="card mb-4">
                    <div class="card-body" style="padding: 10px 12px;">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="d-flex align-items-center gap-3">   
                                <img class="rounded float-left" style="width: 100%; max-width: 70px;" src="/<%= ap.jobPostId.techImage %>" alt="/<%= ap.jobPostId.techImage %>">
                                <div class="d-block">
                                    <p class="card-text" style="font-size: 20px; margin: 0px 0px 2px 0px;"><%= ap.jobPostId.jobPostName %></p>
                                    <p class="card-text" style="font-size: 12px; margin: 0px 0px 2px 0px;">Applied By <b><%= ap.applicantId.name %></b></p>
                                </div>
                            </div>
                            <div class="rejected">
                                <p><%= ap.status %></p>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-end mt-1">
                            <p style="margin: 0px;">3 days ago</p>

                            <a href="/admin/rejected-detail-evaluation/<%=ap.applicationId%>?job=<%=ap.jobPostId._id%>" class="link-primary" style="text-decoration:none;">View Details</a>
                        </div>
                    </div>
                    
                </div>
                <% }) %>
            </div>

        </div>
        <% } %>
    </main>

<%- include('../includes/footer.ejs') %>